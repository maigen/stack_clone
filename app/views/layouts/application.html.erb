<!DOCTYPE html>
<html>
<head>
  <title>StackClone</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
 <div class="container">
    <div class="row">

      <div class= "col-sm-3 navigation">
        <% if current_user %>
          <p>Logged in as <%= current_user.name %>.</p>
          <p><%= link_to "Logout", destroy_user_session_path %></p>
        <% else %>
          <p><%= link_to "Login", new_user_session_path %></p>
          <p><%= link_to "Sign-up", new_user_registration_path %></p>
        <% end %>
        <%= yield(:navigation) %>
      </div>

      <div class= "col-sm-9">

        <div class="row">
          <%= yield(:header) %>

          <%= flash[:notice] %>
          <%= flash[:alert] %>
          <%= yield %>
        </div>
      </div>

    </div>
  </div>
</body>
</html>
