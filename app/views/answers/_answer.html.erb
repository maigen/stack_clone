<li>
 <p class="answer"> <%= answer.content %></p>
  Posted by: <%= answer.user.name %> at <%= answer.created_at.strftime("%I:%M %P on %B %d") %>
  Votes: <%= answer.vote_count %>
      <span class="votes">[ <%= link_to("+", votes_path(vote: { :answer_id => answer.id, :value => 1 }), :method => 'post') %>
      <%= link_to("-", votes_path(vote: { :answer_id => answer.id, :value => -1 }), :method => 'post') %> ]</span>
</li>
